<!DOCTYPE html>
<html>
  <head>
    <title>CLS 免登陆跳转</title>
  </head>
  <body>
    <div class="cls"></div>
    <script type="text/javascript" src="js/jquery-3.5.1.min.js"></script>
    <script>
      async function fetchConsoleLink(password) {
        return new Promise((resolve, reject) => {
          $.ajax({
            url: 'url',
            type: 'POST',
            contentType: 'application/json;charset=UTF-8',
            data: JSON.stringify({ password: password }),
            success: function (result) {
              if (result.url) {
                resolve(result);
              } else {
                reject(result);
              }
            },
            error: function (err) {
              reject(err);
            },
          });
        });
      }
      function prepareIframe(url) {
        const ifrm = document.createElement('iframe');
        ifrm.setAttribute('src', url);
        ifrm.style.width = '99vw';
        ifrm.style.height = '90vh';
        document.body.appendChild(ifrm);
      }
      $(document).ready(() => {
        $.ajax({
          url: 'hasPassword',
          type: 'POST',
          contentType: 'application/json;charset=UTF-8',
          success: (result) => {
            const password = result.hasPassword
              ? window.prompt('请输入免登陆跳转服务密码（注意：将覆盖已登录账号）')
              : '';
            fetchConsoleLink(password)
              .then(({ url }) => {
                prepareIframe(url);
              })
              .catch((err) => {
                console.log(err);
                alert(JSON.stringify(result));
              });
          },
        });
      });
    </script>
  </body>
</html>
